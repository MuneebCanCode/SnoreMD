{
  "name": "snoremd-patient-notes",
  "version": "1.0.0",
  "description": "Snore MD Patient Follow-Up Notes System",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "infra"
  ],
  "scripts": {
    "dev": "cd frontend && npm start",
    "start": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../infra && npm install",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "deploy": "cd infra && npm run deploy"
  },
  "keywords": ["snoremd", "patient-notes", "serverless"],
  "author": "",
  "license": "ISC"
}
